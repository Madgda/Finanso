<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Finanso" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Blue</item>
        <item name="android:itemTextAppearance">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="colorPrimaryVariant">@color/BlueDarker</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Purple</item>
        <item name="colorSecondaryVariant">@color/PurpleDarker</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>`
    <style name="Theme.Finanso.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Finanso.AppBarOverlay" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="Theme.Finanso.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
