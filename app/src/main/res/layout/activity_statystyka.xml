<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:itemTextColor="@color/black"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    tools:context=".StatisticsActivity.StatystykaActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Blue"
        tools:context=".ListActivity.ListActivity">
        <GridLayout
            android:id="@+id/menuListPas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:columnCount="1"
            android:foregroundGravity="top"
            android:rowCount="2">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/Blue"
                android:elevation="4dp"
                android:textAlignment="gravity"
                app:itemTextColor="@color/black"
                />

            <GridLayout
                android:id="@+id/pasekDataStat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:columnCount="9"
                android:foregroundGravity="top"
                android:rowCount="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="4dp"
                    android:backgroundTint="@color/Blue"
                    android:contextClickable="true"
                    android:drawableLeft="@drawable/strzalka_w_prawo"
                    android:scaleX="-1"
                    android:scaleY="-1"
                    android:textAlignment="center"
                    />

                <TextView android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="3"
                    android:backgroundTint="@color/Blue"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="31.10.2021"
                    />
                <TextView android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/Blue"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="-"
                    android:textColor="@color/white"
                    />
                <TextView android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="3"
                    android:backgroundTint="@color/Blue"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                     android:text="31.10.2021"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:layout_marginRight="4dp"
                    android:backgroundTint="@color/Blue"
                    android:contextClickable="true"
                    android:drawableLeft="@drawable/strzalka_w_prawo"
                    android:textAlignment="center"
                    />

            </GridLayout>

            <GridLayout
                android:id="@+id/przyciskiOkresCzasuStat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:columnCount="9"
                android:foregroundGravity="top"
                android:rowCount="1">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/BlueDarker"
                    android:gravity="center"
                    android:text="dzień"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:paddingLeft="-10dp"
                    android:paddingRight="-10dp"
                    android:textSize="13sp"
                    android:layout_marginRight= "1dp"
                    android:layout_marginLeft= "1dp"
                    android:textStyle="bold"
                    /><Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/BlueDarker"
                    android:gravity="center"
                    android:text="tydzień"
                    android:paddingLeft="-10dp"
                    android:paddingRight="-10dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginRight= "1dp"
                    android:layout_marginLeft= "1dp"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/BlueDarker"
                    android:gravity="center"
                    android:text="miesiąc"
                    android:paddingLeft="-10dp"
                    android:paddingRight="-10dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginRight= "1dp"
                    android:layout_marginLeft= "1dp"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/BlueDarker"
                    android:gravity="center"
                    android:text="kwartał"
                    android:paddingLeft="-10dp"
                    android:paddingRight="-10dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginRight= "1dp"
                    android:layout_marginLeft= "1dp"
                    android:textStyle="bold"
                    />      <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/BlueDarker"
                    android:gravity="center"
                    android:text="rok"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:paddingLeft="-10dp"
                    android:paddingRight="-10dp"
                    android:textSize="13sp"
                    android:layout_marginRight= "1dp"
                    android:layout_marginLeft= "1dp"
                    android:textStyle="bold"
                    />


            </GridLayout>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/menuListPas"
            android:layout_alignParentBottom="true"
            android:padding="2dp"
            android:columnCount="1"
            android:background="@color/white"
            android:rowCount="5"
            android:foregroundGravity="top"
            >
            <GridLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:rowCount="2"
                android:columnCount="4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="2"
                    android:layout_rowWeight="1"
                    android:paddingTop="10dp"
                    android:text="Saldo:"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal|top"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="2"
                    android:layout_rowWeight="1"
                    android:paddingBottom="15dp"
                    android:text="2 000 002,00"
                    android:gravity="center_horizontal|bottom"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:text="Wydatki:"
                        android:layout_gravity="center|left"
                        android:paddingTop="5dp"
                        android:textSize="18sp"
                        android:textColor="#814C48"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_gravity="center|left"
                        android:text="Wpływy:"
                        android:paddingBottom="3dp"
                        android:textColor="@color/greyGreen"
                        android:textSize="18sp" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:text="150,00"
                        android:layout_gravity="center|left"
                        android:paddingTop="5dp"
                        android:textSize="18sp"
                        android:textColor="@color/greyRed"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center|left"
                        android:paddingBottom="3dp"
                        android:text="10,00"
                        android:textColor="@color/greyGreen"
                        android:textSize="18sp" />

            </GridLayout>


            <RelativeLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="2"
                android:foregroundGravity="center"
                android:layout_width="0dp"
                android:layout_height="0dp"
                >

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                     />


            </RelativeLayout>

            <RelativeLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="2"
                android:foregroundGravity="bottom"
                android:layout_width="0dp"
                android:layout_height="0dp">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    />

            </RelativeLayout>
        </GridLayout>
